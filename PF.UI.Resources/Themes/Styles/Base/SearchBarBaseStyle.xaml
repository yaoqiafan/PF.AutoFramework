    <Style
        x:Key="SearchBarExtendBaseStyle"
        BasedOn="{StaticResource SearchBarBaseStyle}"
        TargetType="pfcontrol:SearchBar">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="pfcontrol:InfoElement.Symbol" Value="●" />
        <Setter Property="pfcontrol:InfoElement.ContentHeight" Value="{x:Static system:Double.NaN}" />
        <Setter Property="pfcontrol:InfoElement.MinContentHeight" Value="{StaticResource DefaultControlHeight}" />
        <Setter Property="Template" Value="{StaticResource SearchBarExtendTopTemplate}" />
        <Style.Triggers>
            <Trigger Property="pfcontrol:InfoElement.TitlePlacement" Value="Left">
                <Setter Property="Template" Value="{StaticResource SearchBarExtendLeftTemplate}" />
                <Setter Property="Width" Value="Auto" />
            </Trigger>
        </Style.Triggers>
    </Style>

