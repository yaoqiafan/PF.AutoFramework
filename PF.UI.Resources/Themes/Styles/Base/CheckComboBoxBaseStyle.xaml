    <Style
        x:Key="CheckComboBoxExtendBaseStyle"
        BasedOn="{StaticResource CheckComboBoxBaseStyle}"
        TargetType="pfcontrol:CheckComboBox">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Template" Value="{StaticResource CheckComboBoxExtendTopTemplate}" />
        <Setter Property="pfcontrol:InfoElement.Symbol" Value="●" />
        <Setter Property="pfcontrol:InfoElement.ContentHeight" Value="{x:Static system:Double.NaN}" />
        <Setter Property="pfcontrol:InfoElement.MinContentHeight" Value="{StaticResource DefaultControlHeight}" />
        <Style.Triggers>
            <Trigger Property="pfcontrol:InfoElement.TitlePlacement" Value="Left">
                <Setter Property="Template" Value="{StaticResource CheckComboBoxExtendLeftTemplate}" />
            </Trigger>
        </Style.Triggers>
    </Style>

