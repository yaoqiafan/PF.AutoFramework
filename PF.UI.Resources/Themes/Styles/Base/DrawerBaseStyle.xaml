    xmlns:pfcontrol="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls">
    
    <Style x:Key="DrawerBaseStyle" TargetType="pfcontrol:Drawer">
        <Setter Property="Dock" Value="Right" />
