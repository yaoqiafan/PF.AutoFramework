<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PF.UI.Resources"
    xmlns:pfcontrol="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls">
    
    <Style BasedOn="{StaticResource SearchBarBaseStyle}" TargetType="pfcontrol:SearchBar" />

    <Style
        x:Key="SearchBar.Small"
        BasedOn="{StaticResource SearchBarBaseStyle}"
        TargetType="pfcontrol:SearchBar">
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="Padding" Value="6,0" />
    </Style>

    <Style
        x:Key="SearchBarExtend"
        BasedOn="{StaticResource SearchBarExtendBaseStyle}"
        TargetType="pfcontrol:SearchBar" />

    <Style
        x:Key="SearchBarExtend.Small"
        BasedOn="{StaticResource SearchBarExtend}"
        TargetType="pfcontrol:SearchBar">
        <Setter Property="pfcontrol:InfoElement.MinContentHeight" Value="20" />
        <Setter Property="pfcontrol:InfoElement.ContentHeight" Value="20" />
        <Setter Property="pfcontrol:TitleElement.MarginOnTheLeft" Value="0,3,6,0" />
        <Setter Property="pfcontrol:TitleElement.MarginOnTheTop" Value="6,0,0,1" />
        <Setter Property="Padding" Value="6,0" />
        <Setter Property="MinHeight" Value="20" />
    </Style>

    <Style
        x:Key="SearchBarPlus"
        BasedOn="{StaticResource SearchBarPlusBaseStyle}"
        TargetType="pfcontrol:SearchBar" />

    <Style
        x:Key="SearchBarPlus.Small"
        BasedOn="{StaticResource SearchBarPlus}"
        TargetType="pfcontrol:SearchBar">
        <Setter Property="pfcontrol:InfoElement.MinContentHeight" Value="20" />
        <Setter Property="pfcontrol:InfoElement.ContentHeight" Value="20" />
        <Setter Property="pfcontrol:TitleElement.MarginOnTheLeft" Value="0,3,6,0" />
        <Setter Property="pfcontrol:TitleElement.MarginOnTheTop" Value="6,0,0,1" />
        <Setter Property="Padding" Value="6,0" />
        <Setter Property="MinHeight" Value="20" />
    </Style>

</ResourceDictionary>
