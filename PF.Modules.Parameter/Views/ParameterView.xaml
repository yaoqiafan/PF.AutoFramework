<UserControl
    x:Class="PF.Modules.Parameter.Views.ParameterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PF.Modules.Parameter.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pf="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <pf:TransitioningContentControl TransitionStoryboard="{StaticResource Right2LeftWithFadeTransition}"  TransitionMode="Right2LeftWithFade">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="0,0,0,10"
                Padding="10"
                Background="{DynamicResource BorderBrush}"
                CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="当前参数类型：" />
                        <TextBlock
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="{Binding SelectedParamType.Name}" />

                        <TextBlock
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            Text="参数分类：" />
                        <ComboBox
                            Width="150"
                            ItemsSource="{Binding SelectedParamType.Category}"
                            SelectedIndex="{Binding SelectCategory}" />
                    </StackPanel>

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                        Text="{Binding StatusMessage}" />

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button
                            Margin="0,0,5,0"
                            Command="{Binding LoadCommand}"
                            Content="刷新"
                            Style="{StaticResource ButtonPrimary}"
                            ToolTip="重新加载参数" />

                        <Button
                            Margin="0,0,5,0"
                            pf:IconElement.Geometry="{StaticResource RotateLeftGeometry}"
                            pf:IconElement.Height="16"
                            pf:IconElement.Width="16"
                            Command="{Binding ResetDefaultsCommand}"
                            Style="{StaticResource ButtonWarning}"
                            ToolTip="重置为默认参数">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="5,0,0,0" Text="重置" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                BorderBrush="{DynamicResource PrimaryTextBrush}"
                BorderThickness="1"
                CornerRadius="3">
                <DataGrid
                    x:Name="ParametersGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ColumnWidth="*"
                    GridLinesVisibility="Horizontal"
                    IsReadOnly="False"
                    ItemsSource="{Binding Parameters}"
                    SelectedItem="{Binding SelectedParameter}"
                    SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Category}"
                            Header="类别" />

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            Header="名称" />

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                            Header="描述" />

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding TypeFullName}"
                            Header="类型" />

                        <DataGridTemplateColumn Width="120" Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Width="80"
                                        Command="{Binding DataContext.ChangeValueCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="值更改"
                                        Style="{StaticResource ButtonDashedSuccess}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="auto" Header="值">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Text="{Binding JsonValue, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border
                Grid.Row="2"
                Margin="0,10,0,10"
                Padding="10"
                Background="{DynamicResource BorderBrush}"
                CornerRadius="5">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        pf:IconElement.Geometry="{StaticResource RotateLeftGeometry}"
                        pf:IconElement.Height="16"
                        pf:IconElement.Width="16"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource ButtonSuccess}"
                        ToolTip="添加新参数">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5,0,0,0" Text="添加" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,0"
                        pf:IconElement.Geometry="{StaticResource RotateLeftGeometry}"
                        pf:IconElement.Height="16"
                        pf:IconElement.Width="16"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ElementName=ParametersGrid, Path=SelectedItem}"
                        Style="{StaticResource ButtonDanger}"
                        ToolTip="删除选中参数">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5,0,0,0" Text="删除" />
                        </StackPanel>
                    </Button>

                    <Button
                        pf:IconElement.Geometry="{StaticResource RotateLeftGeometry}"
                        pf:IconElement.Height="16"
                        pf:IconElement.Width="16"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource ButtonPrimary}"
                        ToolTip="保存所有修改">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5,0,0,0" Text="保存" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <StatusBar Grid.Row="3">
                <StatusBarItem>
                    <TextBlock>
                        <Run Text="总计：" />
                        <Run Text="{Binding TotalCount}" />
                        <Run Text="个参数" />
                    </TextBlock>
                </StatusBarItem>
                <Separator />
                <StatusBarItem>
                    <TextBlock>
                        <Run Text="已修改：" />
                        <Run Text="{Binding ModifiedCount}" />
                        <Run Text="个" />
                    </TextBlock>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </pf:TransitioningContentControl>

</UserControl>