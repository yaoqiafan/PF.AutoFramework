<UserControl
    x:Class="PF.Modules.Parameter.Dialog.ParamChangeDialog_Common"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:PF.Modules.Parameter.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pf="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:tokens="clr-namespace:PF.Core.Constants;assembly=PF.Core"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            
            <RowDefinition Height="auto" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>


        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="参数类别：" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="名称：" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="参数描述：" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="参数类型：" />
       



        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Height="30"
            Text="{Binding SelectedParameter.Category}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsReadOnly="True" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Height="30"
            Text="{Binding SelectedParameter.Name}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsReadOnly="True" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Height="30"
             Text="{Binding SelectedParameter.Description}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsReadOnly="True" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Height="30"
            Text="{Binding SelectedParameter.TypeFullName}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsReadOnly="True" />
        

        <pf:PropertyGrid    Grid.Row="4" Grid.ColumnSpan="2" ShowSortButton="False"  SelectedObject="{Binding ValueInstance}"  pf:TitleElement.TitleWidth="80"/>



        <Grid
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="10,0,10,0"
                    Content="取消"
                    Style="{StaticResource ButtonWarning}"
                     Command="{Binding CancelCommand}"/>
                <Button
                    Margin="10,0,10,0"
                    Content="确认"
                    Style="{StaticResource ButtonPrimary}" 
                    Command="{Binding ConfirmCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>


</UserControl>
