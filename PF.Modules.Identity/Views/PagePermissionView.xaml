<UserControl x:Class="PF.Modules.Identity.Views.PagePermissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
            xmlns:pf="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <pf:TransitioningContentControl TransitionMode="Right2LeftWithFade" TransitionStoryboard="{StaticResource Right2LeftWithFadeTransition}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#EEE" BorderThickness="0,0,0,1" Margin="0,0,0,15" Padding="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="权限配置对象：" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                <ComboBox ItemsSource="{Binding Users}" 
                          SelectedItem="{Binding SelectedUser}"
                          DisplayMemberPath="UserName"
                          Width="200" Height="30" VerticalContentAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center" 
                            Visibility="{Binding SelectedUser}">
                    <TextBlock Text="当前等级: " Foreground="Gray"/>
                    <TextBlock Text="{Binding SelectedUser.Root}" FontWeight="SemiBold" Foreground="#007ACC" Margin="5,0,0,0"/>

                    <TextBlock Text="（修改并保存将覆盖该等级的默认权限）" Foreground="Orange" Margin="15,0,0,0" FontStyle="Italic" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="刷新用户列表" Command="{Binding RefreshUsersCommand}" Margin="20,0,0,0" Padding="10,0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding PermissionList}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" BorderThickness="1" BorderBrush="#DDD" RowHeight="35"
                  SelectionUnit="FullRow" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="授权" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsAuthorized, UpdateSourceTrigger=PropertyChanged}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="功能模块" Binding="{Binding Description}" Width="200" IsReadOnly="True" FontWeight="Bold"/>

                <DataGridTextColumn Header="界面代码 (ViewName)" Binding="{Binding ViewName}" Width="*" IsReadOnly="True" Foreground="Gray"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <TextBlock Text="{Binding SelectedUser.UserName, StringFormat='正在配置用户: {0}'}" 
                       VerticalAlignment="Center" Margin="0,0,20,0" Foreground="Gray"/>

            <Button Content="保存当前用户配置" Command="{Binding SaveCommand}" 
                    Padding="25,8" Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
    </pf:TransitioningContentControl>
</UserControl>