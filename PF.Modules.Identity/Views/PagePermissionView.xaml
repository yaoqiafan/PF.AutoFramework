<UserControl
    x:Class="PF.Modules.Identity.Views.PagePermissionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pf="clr-namespace:PF.UI.Controls;assembly=PF.UI.Controls"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:local="clr-namespace:PF.Modules.Identity.Views"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <pf:TransitioningContentControl TransitionMode="Right2LeftWithFade" TransitionStoryboard="{StaticResource Right2LeftWithFadeTransition}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="0,0,0,15"
                Padding="15"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="配置对象：" />

                    <ComboBox
                        Grid.Column="1"
                        Width="220"
                        Height="32"
                        VerticalContentAlignment="Center"
                        DisplayMemberPath="UserName"
                        ItemsSource="{Binding Users}"
                        SelectedItem="{Binding SelectedUser}" />

                    <StackPanel
                        Grid.Column="2"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                        <Border
                            Padding="10,4"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="当前等级：" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Text="{Binding SelectedUser.Root}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Button
                        Grid.Column="3"
                        Height="32"
                        Command="{Binding RefreshUsersCommand}"
                        Content="刷新用户列表"
                        Style="{DynamicResource ButtonDefault}" />
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <DataGrid
                        AutoGenerateColumns="False"
                        BorderThickness="2"
                        CanUserAddRows="False"
                        CanUserSortColumns="False"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding PermissionList}"
                        RowHeight="40"
                        SelectionUnit="FullRow">

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="90" Header="是否授权">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            Width="16"
                                            Height="16"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding IsAuthorized, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="250"
                                Binding="{Binding Description}"
                                FontWeight="Medium"
                                Header="模块名称"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ViewName}"
                                FontFamily="Consolas"
                                Foreground="#999999"
                                Header="路由代码 (ViewName)"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <pf:LoadingCircle
                                Width="40"
                                Height="40"
                                Foreground="#007ACC" />
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="14"
                                Text="正在处理..." />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <StackPanel
                Grid.Row="2"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="{Binding SelectedUser.UserName, StringFormat='正在配置系统账号: {0}'}" />

                <Button
                    Height="36"
                    Padding="15,0"
                    Margin="0,0,15,0"
                    BorderThickness="1"
                    Command="{Binding ApplyDefaultPermissionsCommand}"
                    Content="恢复该等级默认权限"
                    Cursor="Hand" />

                <Button
                    Height="36"
                    Padding="35,0"
                    BorderThickness="0"
                    Command="{Binding SaveCommand}"
                    Content="保存权限配置"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </pf:TransitioningContentControl>
</UserControl>